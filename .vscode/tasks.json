{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build programs",
      "type": "shell",
      "group": "build",
      "command": "make",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build source dist",
      "type": "shell",
      "group": "build",
      "command": "make distcheck",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run all tests",
      "type": "shell",
      "group": "test",
      "command": "make check",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build a test",
      "type": "shell",
      "group": "test",
      "command": "make",
      "args": ["tests/runners/${fileBasenameNoExtension}"],
      "problemMatcher": "$gcc"
    }
  ]
}
